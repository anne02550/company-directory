
      <form role="form" action="/add-employee" method="POST">
        <div class="row collapse" id="add-employee-form">
        <div class="form-group">
          <select class="mdb-select form-control mb-2 mr-sm-2" editable="true" searchable="Search and add here...">
            <option value="" disabled selected>Choose Branch</option>
            {{#each locations}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <select class="mdb-select form-control mb-2 mr-sm-2" editable="true" name="departmentId" searchable="Search and add here...">
            <option value="" disabled selected>Choose Department</option>
            {{#each departments}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}  
          </select>
        </div>
        <div class="form-group">
            <input type="text" name="jobTitle" id="edit-jobTitle" class="form-control mb-2 mr-sm-2" placeholder="Enter Job Title">
        </div>

			  <div class="form-group">
          <input type="text" name="firstName" id="firstName" class="form-control mb-2 mr-sm-2" placeholder="Enter Firstname">
			  </div>

		  	<div class="form-group">
          <input type="text" name="lastName" id="lastName" class="form-control mb-2 mr-sm-2" placeholder="Enter Lastname">
			  </div>

  		  <div class="form-group">
          <input type="email" name="email" id="email" class="form-control mb-2 mr-sm-2" placeholder="Enter Email">
        </div>	    
        
        <button type="submit" class="btn btn-lg btn-success btn-block">Add</button>
        <hr class="colorgraph">      
      </div>
    </form>