
<form role="form" action="/results" method="GET">
      <div class="row collapse" id="edit-form">
        <div class="form-group">
          <select class="mdb-select form-control mb-2 mr-sm-2" name="branch" editable="true" searchable="Search and add here...">
            <option value="" disabled selected>Choose Branch</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
          </select>
        </div>
        <div class="form-group">
          <select class="mdb-select form-control mb-2 mr-sm-2" name="departmentId" editable="true" searchable="Search and add here...">
            <option value="" disabled selected>Choose Department</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>  
          </select>
        </div>
        <div class="form-group">
          <select class="mdb-select form-control mb-2 mr-sm-2" name="jobTitle" editable="true" searchable="Search and add here...">
            <option value="" disabled selected>Choose Job Title</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
          </select>
        </div>

			  <div class="form-group">
          <input type="text" name="firstName" id="firstName" class="form-control mb-2 mr-sm-2" placeholder="Enter Firstname">
			  </div>

		  	<div class="form-group">
          <input type="text" name="lastName" id="lastName" class="form-control mb-2 mr-sm-2" placeholder="Enter Lastname">
			  </div>

  		  <div class="form-group">
          <input type="email" name="email" id="email" class="form-control mb-2 mr-sm-2" placeholder="Enter Email">
        </div>	    

        <button type="submit" class="btn btn-lg btn-success btn-block">Update</button>
        <hr class="colorgraph">      
      </div>
    </form>