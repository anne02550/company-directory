<div class="container">
 {{!-- form trial start --}}

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form role="form">
        <fieldset>
            <h2>Please choose:</h2>

            {{!-- rainbow stripe --}}
            <hr class="colorgraph">
            
              <button type="button" class="btn" data-color="info">Add Employee</button>
               <h2>Find Employee</h2>
               <div class="btn-group">
                 <button type="button" class="btn btn-info dropdown-toggle" id="branch" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Branch
                 </button>
                   <div class="dropdown-menu">
                     <a class="dropdown-item" href="#">Choose brand</a>
                   </div>
                 </div>
                 <div class="btn-group">
                 <button type="button" class="btn btn-info dropdown-toggle" id="department" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Department
                 </button>
                   <div class="dropdown-menu">
                     <a class="dropdown-item" href="#">Choose department</a>
                   </div>
                 </div>
                 <div class="btn-group">
                 <button type="button" class="btn btn-info dropdown-toggle" id="job-title" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Job Title
                 </button>
                   <div class="dropdown-menu">
                     <a class="dropdown-item" href="#">Choose job</a>
                   </div>
                 </div>
            <div class="form-group">
                <input type="text" name="first-name" id="first-name" class="form-control input-lg" placeholder="Enter first name">
            </div>
            <div class="form-group">
                <input type="text" name="last-name" id="last-name" class="form-control input-lg" placeholder="Enter last name">
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password">
            </div>

{{!-- rainbow stripe --}}
            <hr class="colorgraph"> 
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Edit">
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <a href="" class="btn btn-lg btn-primary btn-block">Delete</a>
                </div>
            </div>
        </fieldset>
        </form>
        </div>
    </div>
  
    {{!-- form trial end! --}}
  <div class="table-wrapper-scroll-y results-scrollbar">

 
    <table class="table table-bordered table-striped mb-0">
      <thead>
          <!-- id`, `firstName`, `lastName`, `jobTitle`, `email`, `departmentID` -->      
        <tr>
          <th>ID</th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Job Title</th>
          <th>Department ID</th>
        
        </tr>
      </thead>
      <tbody>
        {{#each personnel}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.firstName}}</td>
          <td>{{this.lastName}}</td>
          <td>{{this.email}}</td>
          <td>{{this.jobTitle}}</td>
          <td>{{this.departmentID}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>