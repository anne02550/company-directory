<div class="container">
  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      
        <fieldset>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <button type="submit"  class="btn btn-lg btn-primary btn-block" data-toggle="collapse" href="#add-employee-form" >Add Employee</button>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <button type="submit"  class="btn btn-lg btn-success btn-block" data-toggle="collapse" href="#search-form" >Find Employee</button>
                </div>
            </div> 
		      <hr class="colorgraph">
        </fieldset>

    {{!-- find-employee --}}
     {{>find-employee-form}}    

    {{!-- add-employee --}}
     {{>add-employee-form}} 

    {{!-- edit form --}}
     {{>edit-form}}   
 
    </div>
  </div>

  {{!-- Result table start --}}
   <div class="row" >
    <div class="col">
      <div class="table-wrapper-scroll-y results-scrollbar">
        <table class="table table-bordered table-striped mb-0">
          <thead>   
            <tr>
              <th>ID</th>
              <th>Employee</th>
              <th>E/D</th>       
            </tr>
          </thead>
          <tbody>
            {{#each personnel}}

            <tr>
              <td>{{this.id}}</td>
              <td> {{this.firstName}} {{this.lastName}} : Software Engineer </td>
              <td>
                <button type="submit" id="edit" class="btn btn-success btn-block edit" employee="{{this.id}}" >Edit</button>
                </br>
              <form action="/delete-employee/{{this.id}}" method="post">
                <button type="submit" href="" id="delete" class="btn btn-primary btn-block" name="foo" >Delete</button>
              </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
  {{!-- Result table end --}}
      </div>
    </div>
  </div>
    <hr class="colorgraph"> 

{{!-- container div end --}}
</div>