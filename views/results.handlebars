<div class="container">
 <div class="row" style="margin-top:20px">
   <button type="button" id="add-employee" class="btn btn-primary" data-color="info">Add Employee</button>
		
		<hr class="colorgraph">
    <label for="label" class="mr-sm-4"><h4>Find Employee:</h4></label>  

    <form role="form" class="form-inline">				
		    <div class="form-group">
                <button type="button" class="btn btn-info dropdown-toggle" id="branch" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Branch
                </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Choose brand</a>
              </div>
            </div>
			
			 <div class="form-group">
                <button type="button" class="btn btn-info dropdown-toggle" id="branch" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Department
                </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Choose department</a>
              </div>
            </div>
            
             <div class="form-group">
                <button type="button" class="btn btn-info dropdown-toggle" id="branch" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Job Title
                </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Choose Job Title</a>
              </div>
            </div>
            
				<div class="form-group">
                    <input type="email" name="email" id="email" class="form-control mb-2 mr-sm-2" placeholder="Enter Firstname">
				</div>
				<div class="form-group">
                    <input type="email" name="email" id="email" class="form-control mb-2 mr-sm-2" placeholder="Enter Lastname">
				</div>
				<div class="form-group">
                    <button type="button" id="search" class="btn btn-success" data-color="info">Search</button>
				</div>
		
		</form>
	</div>
        
    <hr class="colorgraph"> 

  <div class="table-wrapper-scroll-y results-scrollbar">
    <table class="table table-bordered table-striped mb-0">
      <thead>
          <!-- id`, `firstName`, `lastName`, `jobTitle`, `email`, `departmentID` -->      
        <tr>
          <th>ID</th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Job Title</th>
          <th>Department ID</th>
        
        </tr>
      </thead>
      <tbody>
        {{#each personnel}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.firstName}}</td>
          <td>{{this.lastName}}</td>
          <td>{{this.email}}</td>
          <td>{{this.jobTitle}}</td>
          <td>{{this.departmentID}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <hr class="colorgraph"> 
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <input type="submit" id="edit" class="btn btn-lg btn-success btn-block" value="Edit">
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <a href="" id="delete" class="btn btn-lg btn-primary btn-block">Delete</a>
                </div>
            </div>
{{!-- container div end --}}
</div>