 <div class="row" >
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card">
        {{#each personnel}}
        <div class="card-body">
          <h5 class="card-title">{{this.firstName}} {{this.lastName}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{this.jobTitle}}</h6>
              <p class="card-text">{{this.email}}</pclass="card-text">
              <p class="card-text">{{this.departmentName}}, {{this.locationName}}</pclass="card-text">
              <button type="submit" id="edit" class="btn btn-success btn-block edit" employee="{{this.id}}" >Edit</button>      
          <form class="delete-form" action="/delete-employee/{{this.id}}" method="post">
            <button type="submit" class="btn btn-primary btn-block" name="btn" >Delete</button>
          </form>
            {{>delete-confirmation}}
        </div>
        {{/each}}
      </div>
</div>
